# Arch Drive
LABEL=Arch\040Drive    /    btrfs    defaults,noatime,nodiratime,ssd,space_cache,compress=zstd,subvol=@root    0 0

# Boot Drive
LABEL=Boot\040Drive    /boot    vfat    defaults,nofail,noauto,noatime,nodiratime    0 2

# Swap
/swap/file    none    swap    defaults    0 0

# RAM
tmpfs    /tmp    tmpfs    defaults,noatime,nodiratime,nodev,nosuid,size=6G    0 0

# Portable Drive
LABEL=Portable\040Drive    /mnt/backup    btrfs    defaults,nofail,noauto,noatime,nodiratime,ssd,space_cache,compress=zstd,subvol=@backup    0 0
LABEL=Portable\040Drive    /mnt/vm        btrfs    defaults,nofail,noauto,noatime,nodiratime,ssd,space_cache,nodatacow,subvol=@vm    0 0

# External Drive I
LABEL=External\040Drive\040I    /mnt/ext1    btrfs    defaults,nofail,noauto,noatime,nodiratime,compress=zstd    0 0
