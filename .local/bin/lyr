#!/usr/bin/env bash
# global declarations
export SCRIPT_PATH=$(dirname $(realpath "$0"))

checkDeps() {
    echo -ne "Checking for existence of python..."
    run command -v python

    echo -ne "Checking for existence of pip..."
    run command -v pip
}

checkSL() {
    echo -ne "Checking if SwagLyrics already exists..."
    command -v swaglyrics
}

installSL() {
    echo -ne "\nInstalling SwagLyrics..."
    run $(command -v pip) install --user swaglyrics
}

main() {
    source "${SCRIPT_PATH}/helper"

    checkDeps
    if ! checkSL; then
        installSL
    fi
}

main
